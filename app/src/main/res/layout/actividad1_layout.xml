<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/padre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00B7FF">

    <TextView
        android:id="@+id/lbl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORDATORIO CUMPLEAÃ‘OS"
        android:textStyle="bold|italic"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/carga"
        android:layout_width="200dp"
        android:layout_height="200dp"
        style="?android:attr/progressBarStyle"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/lbl1"
        android:layout_centerInParent="true"
        android:alpha="1.0"
        android:indeterminate="true"/>

    <ImageView
        android:id="@+id/check"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/check"
        android:layout_marginTop="240dp"
        android:layout_below="@+id/lbl1"
        android:layout_centerInParent="true"
        android:alpha="0"/>

    <Button
        android:id="@+id/botonAcceder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEDER"
        android:layout_below="@+id/carga"
        android:layout_centerInParent="true"
        android:alpha="0.0"/>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_below="@+id/carga"
        android:layout_centerInParent="true"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="180sp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/lbl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:text="Aplicacion creada por Elisabeth Arjona Badia"
        android:textAlignment="center" />


</RelativeLayout>